FROM node:14

WORKDIR /usr/src/app

COPY ./package*.json /usr/src/app/

RUN npm install
COPY ./ /usr/src/app
EXPOSE 8888

CMD ["node", "index.js"]

#Entrar na pasta "node" para gerar a imagem "desafio_2_img_nodejsapp"
